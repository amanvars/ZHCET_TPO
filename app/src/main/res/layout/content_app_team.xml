<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.avaj.zhcettpo.App_team"
    tools:showIn="@layout/activity_app_team">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:elevation="6dp"
            card_view:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/bg_image"
                    android:src="@drawable/avb"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="135dp"
                    android:background="#F0A830"
                    android:id="@+id/view" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:alpha="0.4"
                    android:background="#000000"
                    android:id="@+id/line"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <com.pkmmte.view.CircularImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/avatar"
                    android:src="@drawable/av"
                    app:border="true"
                    android:scaleType="centerCrop"
                    app:border_color="#F0A830"
                    app:border_width="6dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginBottom="42dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Aman Varshney"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:id="@+id/textView"
                    android:layout_below="@+id/bg_image"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="B.Tech Computer IV Year"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView2"
                    android:layout_below="@+id/textView"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_toEndOf="@+id/avatar"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"/>

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/line"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fbimg_aman"
                    android:src="@drawable/facebook"/>
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/line"
                    android:layout_toRightOf="@+id/fbimg_aman"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ldimg_aman"
                    android:src="@drawable/linkedin"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="6dp"
            card_view:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/bg_image1"
                    android:src="@drawable/ajb"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_marginTop="135dp"
                    android:background="#F0A830"
                    android:id="@+id/view1" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:alpha="0.4"
                    android:background="#000000"
                    android:id="@+id/line1"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_alignStart="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <com.pkmmte.view.CircularImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/avatar1"
                    android:src="@drawable/aj"
                    app:border="true"
                    android:scaleType="centerCrop"
                    app:border_color="#F0A830"
                    app:border_width="6dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginBottom="42dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Aakrati Jain"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:id="@+id/textView1"
                    android:layout_below="@+id/bg_image1"
                    android:layout_toRightOf="@+id/avatar1"
                    android:layout_toEndOf="@+id/avatar1"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="B.Tech Computer IV Year"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView1"
                    android:layout_toRightOf="@+id/avatar1"
                    android:layout_toEndOf="@+id/avatar1"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"/>

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/line1"
                    android:layout_toRightOf="@+id/avatar1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fbimg_aaku"
                    android:src="@drawable/facebook"/>
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@id/line1"
                    android:layout_toRightOf="@+id/fbimg_aaku"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ldimg_aaku"
                    android:src="@drawable/linkedin"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        </LinearLayout>

</RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
